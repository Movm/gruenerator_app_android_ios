{
  "expo": {
    "name": "Gruenerator",
    "slug": "gruenerator-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "gruenerator",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "de.gruenerator.app",
      "jsEngine": "jsc",
      "infoPlist": {
        "NSCameraUsageDescription": "Diese App benötigt Zugriff auf die Kamera für Videoaufnahmen.",
        "NSPhotoLibraryUsageDescription": "Diese App benötigt Zugriff auf deine Fotos, um Videos auszuwählen und zu bearbeiten.",
        "NSPhotoLibraryAddUsageDescription": "Diese App benötigt Zugriff auf deine Fotos, um bearbeitete Videos zu speichern.",
        "NSMicrophoneUsageDescription": "Diese App benötigt Zugriff auf das Mikrofon für Videoaufnahmen.",
        "LSApplicationQueriesSchemes": [
          "http",
          "https",
          "gruenerator"
        ],
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "gruenerator-auth",
            "CFBundleURLSchemes": [
              "gruenerator"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#005437"
      },
      "package": "de.gruenerator.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO"
      ],
      "jsEngine": "jsc",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "gruenerator"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 34,
            "buildToolsVersion": "35.0.0",
            "minSdkVersion": 24
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "b0d6dae4-aa63-4452-8667-588468e1c337"
      }
    }
  }
}
